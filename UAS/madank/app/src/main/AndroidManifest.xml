<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.menumakan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MADANK"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:exported="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.MenuMakan">
        <activity android:name=".SplashActivity" android:theme="@style/SplashTheme">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity" android:theme="@style/SplashTheme">
        </activity>
        <activity
            android:name=".RegisterActivity" android:theme="@style/SplashTheme"/>
        <activity
            android:name=".SecondActivity"
            android:parentActivityName=".MainActivity"
            android:label="Details"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"/>
    </application>

</manifest>